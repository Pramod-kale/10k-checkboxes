{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true, // Skip checking type definitions for libraries
    /* Bundler mode */
    "moduleResolution": "bundler", // Vite-specific bundling resolution
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx", // JSX support for React
    /* Linting */
    "strict": true, // Enable strict mode
    "noUnusedLocals": false, // Ignore warnings for unused local variables
    "noUnusedParameters": false, // Ignore warnings for unused function parameters
    "noImplicitAny": false, // Allow implicit 'any' types
    "strictNullChecks": false, // Disable strict null checking
    "noFallthroughCasesInSwitch": true // Ensure no fallthrough in switch cases
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules", // Exclude node_modules from type-checking
    "dist" // Exclude the build output folder
  ]
}